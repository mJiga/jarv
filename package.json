{
  "name": "jarvis",
  "version": "1.0.0",
  "description": "Personal finance MCP server + LLM agent backed by Notion",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/mcp/server.js",
    "start:mcp": "node dist/mcp/server.js",
    "start:agent": "node dist/agent/agent_server.js",
    "mcp": "ts-node-dev --respawn src/mcp/server.ts",
    "agent": "ts-node-dev --respawn src/agent/agent_server.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["mcp", "notion", "finance", "gemini", "llm", "agent"],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@notionhq/client": "^5.4.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}

# =============================================================================
# JARVIS - Personal Finance MCP Server
# Copy this file to .env and fill in your values
# =============================================================================

# Notion Template #
https://memoo0.notion.site/jarv-template-2e54abe19ef5802fb3fcce0017006fc1?source=copy_link

# -----------------------------------------------------------------------------
# Notion API
# -----------------------------------------------------------------------------
# Get your API key from https://www.notion.so/my-integrations
NOTION_API_KEY=secret_xxx

# Database IDs (from the URL when viewing each database in Notion)
# Format: https://notion.so/{workspace}/{database_id}?v=...
EXPENSES_DB_ID=
INCOME_DB_ID=
PAYMENTS_DB_ID=
ACCOUNTS_DB_ID=
CATEGORIES_DB_ID=
BUDGET_RULES_DB_ID=

# -----------------------------------------------------------------------------
# LLM API Keys (for Agent - choose one)
# -----------------------------------------------------------------------------
# Set LLM_PROVIDER=[desired llm provider] in agent_server.ts to use desired llm instead of Gemini
# Gemini: Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# -----------------------------------------------------------------------------
# Server Ports (optional - defaults shown)
# -----------------------------------------------------------------------------
PORT=3000
AGENT_PORT=4000

# -----------------------------------------------------------------------------
# MCP Client Config (optional - for Agent to call MCP)
# -----------------------------------------------------------------------------
MCP_BASE_URL=http://localhost:3000

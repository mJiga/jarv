# =============================================================================
# JARVIS - Personal Finance MCP Server
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Notion API
# -----------------------------------------------------------------------------
# Get your API key from https://www.notion.so/my-integrations
NOTION_API_KEY=secret_xxx

# Database IDs (from the URL when viewing each database in Notion)
# Format: https://notion.so/{workspace}/{database_id}?v=...
EXPENSES_DB_ID=
INCOME_DB_ID=
PAYMENTS_DB_ID=
ACCOUNTS_DB_ID=
CATEGORIES_DB_ID=
BUDGET_RULES_DB_ID=

# -----------------------------------------------------------------------------
# LLM API Keys (for Agent - choose one)
# -----------------------------------------------------------------------------
# Gemini: Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Claude: Get your API key from https://console.anthropic.com/
# Set LLM_PROVIDER=claude in agent_server.ts to use Claude instead of Gemini
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# Credit Card Identification (for LLM card matching)
# -----------------------------------------------------------------------------
# Last 4 digits of your credit cards - helps the LLM identify which card
SAPPHIRE_LAST4=
FREEDOM_LAST4=

# -----------------------------------------------------------------------------
# Server Ports (optional - defaults shown)
# -----------------------------------------------------------------------------
PORT=3000
AGENT_PORT=4000

# -----------------------------------------------------------------------------
# MCP Client Config (optional - for Agent to call MCP)
# -----------------------------------------------------------------------------
MCP_BASE_URL=http://localhost:3000
